<script>
    let n=document.createElement("h2")
    n.textContent="how are you"

    let p=document.getElementById("a")
    let l=document.getElementById("r")
    p.insertBefore(n,l)
    console.log(p)

    let nn=document.createElement("h2")
    nn.textContent="I am fine"

    let pp=document.getElementById("b")
    let ll=document.getElementById("a1")
    pp.insertBefore(nn,ll)
    console.log(pp)

    //removing an element div
    let b1=document.getElementById("a")
    b1.remove();

    //removing child element
    let n1=document.getElementById("b")
    let n2=document.getElementById("a1")
    console.log(n1)
    n1.removeChild(n2)


